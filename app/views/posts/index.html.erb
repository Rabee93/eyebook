<% if @let %>
<h1> Your properties</h1>
<%else%>
<h1>Current properties</h1>
<%end%>

<table>
  <tr>
    <th>email</th>
    <th>bedroom</th>
    <th>location</th>
    <th>type</th>
    <th>price per month</th>
    <th>description</th>
    <th>image</th>
  </tr>

  <% @posts.each do |p| %>
    <tr>
      <td><%= p.user.email %></td>
      <td><%= p.bedroom %></td>
      <td><%= p.city %></td>
      <td><%= p.property_type %></td>
      <td><%= p.price %></td>
      <td><%= p.comments%></td>
      <td><img height="100" src="<%= p.picture%>"></img></td>
      <% if @let %>
      <td><%= link_to 'Edit', edit_post_path(p) %></td>
      <td><%= link_to 'Delete', post_path(p),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

      <%end%>
    </tr>
  <% end %>
</table>

<% if @let %>
<%= link_to 'New post', new_post_path %>
<br>
<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
<% end%>
